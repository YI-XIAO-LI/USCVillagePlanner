<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="100dp"
    android:background="@drawable/background"
    android:backgroundTint="#9FFFFFFF"
    android:backgroundTintMode="src_over"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mEtName"
        android:hint="Name"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/mEtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"
        android:hint=" Email"
        android:drawableStart="@drawable/ic_baseline_email_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEtName"
        tools:layout_editor_absoluteY="105dp" />

    <EditText
        android:id="@+id/mEtPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"
        android:hint=" Password"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEtEmail"
        tools:layout_editor_absoluteY="105dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mBtnRegister"
        android:text="Register"
        app:layout_constraintTop_toBottomOf="@+id/imagelink"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mBtnLogin"
        android:text="Already Register? Go To Login"
        android:onClick="jumptoLoginIntent"
        app:layout_constraintTop_toBottomOf="@+id/mBtnRegister"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/imagelink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"
        android:hint=" Profile Image Link"
        android:drawableStart="@drawable/ic_baseline_image_search_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEtPw" />


</androidx.constraintlayout.widget.ConstraintLayout>