<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mEtName"
        android:hint="Name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="30dp"/>

    <EditText
        android:id="@+id/mEtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:hint="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEtName"
        tools:layout_editor_absoluteY="105dp" />

    <EditText
        android:id="@+id/mEtPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:hint="Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEtEmail"
        tools:layout_editor_absoluteY="105dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mBtnRegister"
        android:text="Register"
        app:layout_constraintTop_toBottomOf="@+id/imagelink"
        android:layout_margin="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mBtnLogin"
        android:text="Already Register? Go To Login"
        android:onClick="jumptoLoginIntent"
        app:layout_constraintTop_toBottomOf="@+id/mBtnRegister"
        android:layout_margin="30dp"/>

    <EditText
        android:id="@+id/imagelink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:hint="Profile Image Link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mEtPw"
        tools:layout_editor_absoluteY="105dp" />


</androidx.constraintlayout.widget.ConstraintLayout>